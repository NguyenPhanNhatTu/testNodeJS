<div class="mt-4">
    <div class="row">

        {{#each courses}}
        <div class="col-sm-6 col-lg-4">
            <div class="card card-couse-item" style="width: 18rem;">
            <div class="card-body">
                <img class="card-img-top" src="{{this.image}}" alt="{{this.name}}">
                <h5 class="card-title">{{this.name}}</h5>
                <p class="card-text">{{this.decriptions}}</p>
            </div>
            </div>  
        </div>
        {{/each}}
    </div>
</div>